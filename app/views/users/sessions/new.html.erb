<div class="container">
  <div class="row d-flex justify-content-center">
    <span class="h2 mb-3 col-md-auto">
      ログイン
    </span>
  </div>

  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="row mt-3">
      <div class="col-md-2 my-1 p-0 offset-md-3 d-flex align-items-center justify-content-center label-area">
        <p class="m-0">
          <%= f.label :"メールアドレス", class: "m-0" %>
        </p>
      </div>
      <div class="col-md-4 my-1 ml-3 p-2 text-area">
        <%= f.email_field :email, placeholder: "youremail@example.com", autocomplete: "email", class: "form-control" %>
      </div>

      <div class="col-md-2 my-1 p-0 offset-md-3 d-flex align-items-center justify-content-center label-area">
        <p class="m-0">
          <%= f.label :"パスワード", class: "m-0" %>
        </p>
      </div>
      <div class="col-md-4 my-1 ml-3 p-2 text-area">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

    </div>

    <div class="row mt-4 d-flex justify-content-center">
      <div class="col-md-3">
        <%= f.submit "ログインする", class: "btn btn-outline-secondary form-control" %>
      </div>
    </div>

  <% end %>

  <!--<p class="mt-5 d-flex justify-content-center">-->
  <!--  パスワードを忘れてしまった方は<%#= link_to "こちら", new_password_path(resource_name) %>-->
  <!--</p>-->
  <p class="mt-5 d-flex justify-content-center">
    まだ会員登録がお済みでない方は<%= link_to "こちら", new_user_registration_path %>から
  </p>
</div>
