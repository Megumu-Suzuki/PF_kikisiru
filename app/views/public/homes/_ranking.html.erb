<div class="row mt-5 mb-3">
  <div class="col-md-4 d-flex">
    <h4 class="font-weight-bold">カテゴリー別評価ランキング</h4>
  </div>
</div>
<table>
  <tbody>
    <tr>
      <th class="row justify-content-center">
        <% unless genre_rankings.blank? %>
          <% genre_rankings.each.with_index(1) do |products, index| %>
            <div class="col-md-6">
              <div class="card my-3">
                <div class="col-md-auto d-flex justify-content-center">
                  <h4 class="py-0 my-0"><%= Genre.find(index).name %></h4>
                </div>
                <% products.each.with_index(1) do |product, i| %>
                  <div class="card my-2 mx-2">
                    <%= link_to product_path(product), class:"text-decoration-none" do %>
                      <div class="container-fluid py-2">
                        <div class="row">
                          <div class="col-md-1 pr-0 d-flex">
                            <%= i %>位
                          </div>
                          <div class="col-md-6">
                            <div class="row">
                              <div class="col-md-auto mt-3 mb-4 d-flex">
                                <%= product.title %><br>
                                (<%= product.model %>)
                              </div>
                            </div>
                            <div class="row">
                              <div class="col-md-8">
                                <div class="review-average" data-score=<%= product.review_average %>></div>
                              </div>
                              <div class="col-md-1 d-flex">
                                <%= product.review_average.round(2) %>
                              </div>
                            </div>
                          </div>
                          <div class="col-md-4">
                            <%= image_tag product.top_image, style: "object-fit: cover; width: 150px; height: 150px;" %>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </th>
    </tr>
  </tbody>
</table>