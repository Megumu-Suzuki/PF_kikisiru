<div class="card my-3 ml-0">
  <div class="container-fluid py-2">
    <div class="row">
      <div class="col-2 d-flex justify-content-center">
        <%= image_tag product.top_image, style: "object-fit: cover; width: 150px; height: 150px;" %>
      </div>
      <div class="col-10">
        <div class ="row">
          <div class="col-12 mt-3 pr-3 border-bottom">
            <div class="row">
              <div class="col-12">
                <div class="row">
                  <div class="col-5">
                    <span class="h4 font-weight-bold"><%= product.title %></p>
                  </div>
                  <div class="col-6">
                    <span class="h5 text-dark"><%= product.product_size %></p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-4">
                    <p class="h5">(<%= product.model %>)</p>
                  </div>
                  <div class="col-3 pr-1 d-flex justify-content-end">
                    <span class="review-average" data-score="<%= product.review_average %>"></span>
                  </div>
                  <div class="col-5 pl-1">
                    <span class="h4 text-dark"><%= product.review_average.round(2) %></span>
                    <span class="h6 text-dark">　<%= product.reviews.count %>件のレビュー</span>
                    <span class="h6 ml-3 text-danger"><i class="fa fa-heart unlike"="true"></i></span>
                    <span class="h6 text-dark">
                      <span class="favorite-count-<%= product.id %>"><%= product.favorites.count %>件のいいね</span>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-12 mt-2">
            <div class ="row">
              <div class="col-12 ">
                <p class="m-0 text-dark"><%= truncate(product.description, length: 60) %></p>
              </div>
            </div>
          </div>
          <div class="col-12">
            <div class="row ml-1">
              <% product.product_tags.each do |tag|%>
                <div class="p-1 flex-row">
                  <p class="border m-0 text-body"><%= tag.name %></p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>