 <% if product.favorited_by?(current_user) %>
  	<span>
  		<%= link_to product_favorites_path(product.id), class:"text-red", method: :delete, remote: true do %>
  		  <i class="fa fa-heart unlike"="true"></i> <%= product.favorites.count %>
  		<% end %>
  	</span>
  <% else %>
  	<span>
  		<%= link_to product_favorites_path(product.id), class:"text-blue", method: :post, remote: true do %>
  		  <i class="fa fa-heart"="true"></i> <%= product.favorites.count %>
  		<% end %>
  	</span>
  <% end %>