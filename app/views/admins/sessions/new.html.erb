<div class="container">
  <div class="row d-flex justify-content-center">
    <span class="h2 mb-3 col-md-auto">
      管理者ログイン
    </span>
  </div>

  <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
    <div class="row mt-3">
      <div class="col-md-2 my-1 p-0 offset-md-3 d-flex align-items-center justify-content-center label-area">
        <p class="m-0">
          <%= f.label :"メールアドレス", class: "m-0" %>
        </p>
      </div>
      <div class="col-md-4 my-1 ml-3 p-2 text-area">
        <%= f.email_field :email, placeholder: "youremail@example.com", autocomplete: "email", class: "form-control" %>
      </div>

      <div class="col-md-2 my-1 p-0 offset-md-3 d-flex align-items-center justify-content-center label-area">
        <p class="m-0">
          <%= f.label :"パスワード", class: "m-0" %>
        </p>
      </div>
      <div class="col-md-4 my-1 ml-3 p-2 text-area">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

    </div>

    <div class="row mt-4 d-flex justify-content-center">
      <div class="col-md-3">
        <%= f.submit "ログインする", class: "btn btn-outline-secondary form-control" %>
      </div>
    </div>
  <% end %>
</div>
