<div class="container">
  <%= form_with model: @product, url: admin_products_path, local:true do |s| %>
    <div class="row">
      <%= render 'layouts/error_messages', model: s.object %>
    </div>
    <div class="row mt-3">
      <div class="col-md-12 mb-3 d-flex justify-content-center">
        <p class="h4">トップ画像</p>
      </div>

      <div class="col-md-2 my-1 p-0 offset-md-3 d-flex align-items-center justify-content-center" style="background-color: #DDDDDD;">
        <p class="m-0">
          <%= s.label :"*トップ画像", class: "m-0" %>
        </p>
      </div>
      <div class="col-md-4 my-1 ml-3 p-2" style="background-color: #EEEEEE;" >
        <%= s.file_field :top_image %>
      </div>
      <div class="col-md-12 d-flex justify-content-center">
        <p class="h6">※トップで表示される画像になります。</p>
      </div>

      <div class="col-md-12 mt-3 d-flex justify-content-center">
        <p class="h4">機器詳細</p>
      </div>

      <div class="col-md-1 my-1 p-0 offset-md-3 d-flex align-items-center justify-content-center" style="background-color: #DDDDDD;">
        <p class="m-0">
          <%= s.label :"機器名", class: "m-0" %>
        </p>
      </div>
      <div class="col-md-5 my-1 ml-3 p-2" style="background-color: #EEEEEE;" >
        <%= s.text_field :title, class: "form-control" %>
      </div>

      <div class="col-md-1 my-1 p-0 offset-md-3 d-flex align-items-center justify-content-center" style="background-color: #DDDDDD;">
        <p class="m-0">
          <%= s.label :"メーカー", class: "m-0" %>
        </p>
      </div>
      <div class="col-md-5 my-1 ml-3 p-2" style="background-color: #EEEEEE;" >
        <%= s.select :manufacture, Product.manufactures.keys, {include_blank: '選択してください'}, class: "form-control" %>
      </div>

      <div class="col-md-1 my-1 p-0 offset-md-3 d-flex align-items-center justify-content-center" style="background-color: #DDDDDD;">
        <p class="m-0">
          <%= s.label :"*型式", class: "m-0" %>
        </p>
      </div>
      <div class="col-md-5 my-1 ml-3 p-2" style="background-color: #EEEEEE;" >
        <%= s.text_field :model, class: "form-control"%>
      </div>

      <div class="col-md-1 my-1 p-0 offset-md-3 d-flex align-items-center justify-content-center" style="background-color: #DDDDDD;">
        <p class="m-0">
          <%= s.label :"*ジャンル", class: "m-0" %>
        </p>
      </div>
      <div class="col-md-5 my-1 ml-3 p-2" style="background-color: #EEEEEE;" >
        <%= s.collection_select :genre_id, @genres, :id, :name, {prompt: "--選択してください--"}, class: "form-control" %>
      </div>

      <div class="col-md-1 my-1 p-0 offset-md-3 d-flex align-items-center justify-content-center" style="background-color: #DDDDDD;">
        <p class="m-0">
          <%= s.label :"定価", class: "m-0" %>
        </p>
      </div>
      <div class="col-md-4 my-1 ml-3 p-2" style="background-color: #EEEEEE;" >
        <%= s.text_field :price, class: "form-control" %>
      </div>
      <div class="col-md-1 my-1 p-0 d-flex align-items-center" style="background-color: #EEEEEE;" >
        <span>円</span>
      </div>

      <div class="col-md-1 my-1 p-0 offset-md-3 d-flex align-items-center justify-content-center" style="background-color: #DDDDDD;">
        <p class="m-0">
          寸法
        </p>
      </div>
      <div class="row ml-3">
        <div class="col-md-2 my-1 pl-3 pr-1 pb-2" style="background-color: #EEEEEE;" >
          <%= s.label :"間口", class: "pt-1 mb-0" %>
          <%= s.text_field :width, class: "form-control" %>
        </div>
        <div class="col-md-2 my-1 pr-1 pb-2" style="background-color: #EEEEEE;" >
          <%= s.label :"奥行", class: "pt-1 mb-0" %>
          <%= s.text_field :depth, class: "form-control" %>
        </div>
        <div class="col-md-2 my-1 pr-1 pb-2" style="background-color: #EEEEEE;" >
          <%= s.label :"高さ", class: "pt-1 mb-0" %>
          <%= s.text_field :height, class: "form-control" %>
        </div>
        <div class="col-md-2 my-1 pt-3 pl-2 pr-3 d-flex align-items-center" style="background-color: #EEEEEE;" >
          <span>mm</span>
        </div>
      </div>

      <div class="col-md-1 my-1 p-0 offset-md-3 d-flex align-items-center justify-content-center" style="background-color: #DDDDDD;">
        <p class="m-0">
          <%= s.label :"重量", class: "m-0" %>
        </p>
      </div>
      <div class="col-md-4 my-1 ml-3 p-2" style="background-color: #EEEEEE;" >
        <%= s.text_field :weight, class: "form-control" %>
      </div>
      <div class="col-md-1 my-1 p-0 d-flex align-items-center" style="background-color: #EEEEEE;" >
        <span>kg</span>
      </div>

      <div class="col-md-1 my-1 p-0 offset-md-3 d-flex align-items-center justify-content-center" style="background-color: #DDDDDD;">
        <p class="m-0">
          <%= s.label :"電源", class: "m-0" %>
        </p>
      </div>
      <div class="col-md-5 my-1 ml-3 p-2" style="background-color: #EEEEEE;" >
        <%= s.select :phase, Product.phases.keys, {include_blank: '選択してください'}, class: "form-control" %>
      </div>

      <div class="col-md-1 my-1 p-0 offset-md-3 d-flex align-items-center justify-content-center" style="background-color: #DDDDDD;">
        <p class="m-0">
          <%= s.label :"消費電力", class: "m-0" %>
        </p>
      </div>
      <div class="col-md-4 my-1 ml-3 p-2" style="background-color: #EEEEEE;" >
        <%= s.text_field :power_consumption, class: "form-control" %>
      </div>
      <div class="col-md-1 my-1 p-0 d-flex align-items-center" style="background-color: #EEEEEE;" >
        <span>kW</span>
      </div>

      <div class="col-md-1 my-1 p-0 offset-md-3 d-flex align-items-center justify-content-center" style="background-color: #DDDDDD;">
        <p class="m-0">
          ガス消費量
        </p>
      </div>
      <div class="row ml-3">
        <div class="col-md-4 my-1 pl-1 pr-1 pb-2" style="background-color: #EEEEEE;" >
          <%= s.label :"都市ガス", class: "pt-1 mb-0" %>
          <%= s.text_field :power_consumption, class: "form-control" %>
        </div>
        <div class="col-md-1 my-1 pt-3 pr-5 d-flex align-items-center justify-content-center" style="background-color: #EEEEEE;" >
          <span>kW️</span>
        </div>
        <div class="col-md-4 my-1 px-0 pb-2" style="background-color: #EEEEEE;" >
          <%= s.label :"プロパンガス", class: "pt-1 mb-0" %>
          <%= s.text_field :propane_gas, class: "form-control" %>
        </div>
        <div class="col-md-1 my-1 pt-3 d-flex align-items-center justify-content-center" style="background-color: #EEEEEE;" >
          <span>️kW</span>
        </div>
      </div>

      <div class="col-md-1 my-1 p-0 offset-md-3 d-flex align-items-center justify-content-center" style="background-color: #DDDDDD;">
        <p class="m-0">
          機器説明
        </p>
      </div>
      <div class="col-md-5 my-1 ml-3 p-2" style="background-color: #EEEEEE;" >
        <%= s.text_area :description, size: "20x20", placeholder: "その他機器の説明や特徴をお書きください", class: "form-control" %>
      </div>

      <div class="col-md-1 my-1 p-0 offset-md-3 d-flex align-items-center justify-content-center" style="background-color: #DDDDDD;">
        <p class="m-0">
          編集権限
        </p>
      </div>
      <div class="row ml-3">
        <div class="col-md-2 mt-1 pr-0 d-flex align-items-center justify-content-center" style="background-color: #EEEEEE;" >
          <%= s.label :"編集可能", class: "mb-0" %>
        </div>
        <div class="col-md-2 mt-1 pl-1 d-flex align-items-center" style="background-color: #EEEEEE;" >
          <%= s.radio_button :allow_edit, :true, checked: true %>
        </div>
        <div class="col-md-1 mt-1 pl-4" style="background-color: #EEEEEE;" ></div>
        <div class="col-md-2 mt-1 pr-0 d-flex align-items-center justify-content-center" style="background-color: #EEEEEE;" >
          <%= s.label :"編集不可", class: "mb-0" %>
        </div>
        <div class="col-md-2 mt-1 pl-1 d-flex align-items-center" style="background-color: #EEEEEE;" >
          <%= s.radio_button :allow_edit, :false %>
        </div>
        <div class="col-md-9 m-0 pr-0  d-flex align-items-center justify-content-center" style="background-color: #EEEEEE;" >
          <p class="m-0">
            ※誰でも編集できるかどうかを選択してください。
          </p>
        </div>
      </div>

      <div class="col-md-12 mt-3 d-flex justify-content-center">
        <p class="h4">タグ</p>
      </div>
      <div class="col-md-1 my-1 p-0 offset-md-3 d-flex align-items-center justify-content-center" style="background-color: #DDDDDD;">
        <p class="m-0">
          タグ
        </p>
      </div>
      <div class="col-md-5 my-1 ml-3 p-2" style="background-color: #EEEEEE;" >
        <%= s.text_field :name, value: @tag_list, class: "form-control" %>
      </div>
      <div class="col-md-12 d-flex justify-content-center">
        <p class="h6">複数のタグをつける場合は「,」で区切ってください</p>
      </div>
      <div class="col-md-12 d-flex justify-content-center">
        <p class="h6">※例:うまい,はやい,おいしい</p>
      </div>

      <div class="col-md-12 mt-3 mb-1 d-flex justify-content-center">
        <p class="h4">機器画像</p>
      </div>
      <div class="col-md-12 d-flex justify-content-center">
        <p class="h5">（「画像を追加する」をクリックするとフォームが追加されます）</p>
      </div>
      <div class="col-md-12 mt-3 d-flex justify-content-center">
        <div class="products">
          <%= s.fields_for :product_images do |t| %>
            <%= render "product_image_fields", f: t %>
          <% end %>
          <div class="links d-flex justify-content-center">
            <%= link_to_add_association "画像を追加する", s, :product_images, class: "btn btn-outline-secondary p-1" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row mt-3 d-flex justify-content-center">
      <div class="col-md-3">
        <%= s.submit "機器情報を保存する", class: "btn btn-outline-secondary form-control" %>
      </div>
    </div>
  <% end %>
</div>