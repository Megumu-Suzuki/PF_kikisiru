<div class="container">
  <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
    <div class="row d-flex justify-content-center">
      <div class="col-md-3">
        <div class="card">
          <div class="card-body p-1">
            <p class="card-text text-break d-flex justify-content-center">
              現在登録されている画像
            </p>
          </div>
          <div class="card-img-bottom my-3 d-flex justify-content-center">
            <% if @genre.image.attached? %>
              <%= image_tag @genre.image, style: "object-fit: cover; width: 200px; height: 200px;" %>
            <% else %>
              <%= image_tag 'no_image.png', style: "object-fit: cover; width: 200px; height: 200px;" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="row mt-3 d-flex justify-content-center">
        <div class="col-md-auto" style="background-color: #DDDDDD;">
          <%= f.label :"画像を変更する場合は画像ファイルを選択してください" %>
        </div>
        <div class="w-100"></div>
        <div class="col-md-auto" style="background-color: #EEEEEE;">
          <%= f.file_field :image %>
        </div>
      </div>

    <div class="row mt-3">
      <div class="col-md-1 my-1 p-0 offset-md-3 d-flex align-items-center justify-content-center" style="background-color: #DDDDDD;">
        <p class="m-0">
            <%= f.label :"ジャンル名", class: "m-0" %>
          </p>
      </div>
      <div class="col-md-5 my-1 ml-3 p-2" style="background-color: #EEEEEE;" >
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="row mt-3 d-flex justify-content-center">
      <div class="col-md-3">
        <%= f.submit "変更を保存する", class: "btn btn-outline-secondary form-control" %>
      </div>
    </div>

    <div class="row mt-3 d-flex justify-content-center">
      <div class="col-md-3">
        <%= link_to "削除", admin_genre_path(@genre.id), method: :delete, class: "btn btn-outline-danger form-control" %>
      </div>
    </div>


  <% end %>
</div>